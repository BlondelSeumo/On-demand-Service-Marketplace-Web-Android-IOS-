<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    android:maxHeight="@dimen/_80sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <ImageButton
            android:id="@+id/image_transcation_type"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/drawable_gray_transaction_history"
            android:scaleType="centerInside"
            android:src="@drawable/ic_card_payment_48dp"
            android:textColor="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/ll_transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toStartOf="@+id/iv_credittype"
            android:layout_toEndOf="@+id/image_transcation_type"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_transaction_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="Wallet Topup fddfdd fdfd ffdf"
                android:textColor="@color/wallet_btn"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="center_vertical"
                    android:text="Total Amount : 100"
                    android:textAllCaps="false"
                    android:textColor="@color/wallet_btn"
                    android:textSize="@dimen/_9sdp" />

                <TextView
                    android:id="@+id/tv_tax_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="center_vertical"
                    android:text="Tax Amount    : 4.96"
                    android:textAllCaps="false"
                    android:textColor="@color/wallet_btn"
                    android:textSize="@dimen/_9sdp" />

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_transaction_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:text="$189.00"
            android:textAllCaps="true"
            android:textColor="@color/wallet_btn"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_credittype"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_toStartOf="@+id/tv_transaction_amount"
            android:src="@drawable/ic_credit_100" />


        <TextView
            android:id="@+id/tv_transaction_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="10/07/2019"
            android:textAllCaps="true"
            android:textColor="@color/wallet_btn"
            android:textSize="@dimen/_9sdp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>